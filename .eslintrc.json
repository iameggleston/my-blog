{
  "env": {
    "browser": true, // たくさんのglobals設定が登録される
    "es2021": true,
    "jest": true
  },
  // 設定ファイルを拡張する
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "next/core-web-vitals",
    "prettier"
  ],
  // 機能を追加する
  "plugins": [
   "import" // import order関連の好きな設定を追加する
  ],
  "rules": {
    "no-undef": "error",// TypeScript利用時はno-undefルールはoffにする
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    "import/order": ["error", {
    "newlines-between": "always", // グループ間に空白行が入る
    "alphabetize": {
      "order": "asc" // アルファベットの昇順に並び替えられる
    },
    "semi": true, // ステートメントの末尾にセミコロンを追加
    "trailingComma": "all" // 複数行のカンマ区切り構文構造において、可能な限り末尾にカンマを追加
  }]
  }
}
