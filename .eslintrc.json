{
  "env": {
    "browser": true, // たくさんのglobals設定が登録される
    "es2021": true,
    "jest": true
  },
  // 設定ファイルを拡張する
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "next/core-web-vitals",
    "prettier"
  ],
  // 機能を追加する
  "plugins": [
    "import" // import order関連の好きな設定を追加する
  ],
  "rules": {
    "no-undef": "error", // TypeScript利用時はno-undefルールはoffにする
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    "semi": 2, // ステートメントの末尾にセミコロンがないとerror
    "trailingComma": 2, // カンマ区切り構文構造において、末尾にカンマがないとerror
    "import/order": [
      "error",
      {
        "newlines-between": "always", // グループ間に空白行がないとエラー
        "alphabetize": {
          "order": "asc" // アルファベットの昇順に並んでいないとエラー
        }
      }
    ]
  }
}
